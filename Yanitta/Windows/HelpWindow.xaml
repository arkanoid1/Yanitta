<Window x:Class="Yanitta.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Name="helpWin"
        Style="{StaticResource KamillaStyle}"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="HelpWindow" Height="300" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Name="spellIcon" Margin="3"/>
        
        <StackPanel Grid.Column="1">
            <TextBlock Name="spellName" FontWeight="Bold" Foreground="Cyan"/>
            <TextBlock Name="spellRange" FontWeight="Bold" Foreground="Cyan"/>
            <TextBlock Name="spellCost" FontWeight="Bold" Foreground="Cyan"/>
            <TextBlock Name="spellCastTime" FontWeight="Bold" Foreground="Cyan"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Name="spellDescription" TextWrapping="Wrap" Margin="0,5,0,0" />

    </Grid>
</Window>
