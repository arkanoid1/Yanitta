<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:settings="clr-namespace:Yanitta.Hantchk.Properties"
        x:Class="Yanitta.Hantchk.SettingsWindow"
        Title="Settings" Height="336" Width="471">
    <Grid Name="mainGrid" DataContext="{Binding Source={x:Static settings:Settings.Default}}">
        <TabControl>
            <TabItem Header="Code">
                <avalonedit:TextEditor Text="{Binding LuaCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontFamily="Consolas" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>